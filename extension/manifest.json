{
  "manifest_version": 3,
  "name": "Tab Master",
  "version": "1.2.0",
  "description": "An powerful tab management tool that offers: navigate, drag & drop, close, bookmark, and instant search functionalities.",
  "icons": {
    "16": "./images/16_16.png",
    "32": "./images/32_32.png",
    "48": "./images/48_48.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Tab Master",
    "default_icon": {
      "16": "./images/16_16.png",
      "32": "./images/32_32.png",
      "48": "./images/48_48.png"
    }
  },
  "permissions": ["tabs", "activeTab", "storage"]
}
