{
  "name": "tab-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-watch",
    "build": "next build && mv out/_next out/next && sed -i '' -e 's/\\/_next/\\.\\/next/g' out/**.html && mv out/index.html ../extension && rsync -va --delete-after out/next/ ../extension/next/ && rm -rf out && rsync -va --delete-after public/images ../extension/",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@types/node": "20.3.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "eslint": "^7.23.0",
    "eslint-config-next": "^12.0.4",
    "next": "13.4.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.1.3"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.239",
    "npm-watch": "^0.11.0",
    "typescript-plugin-css-modules": "^5.0.1"
  },
  "watch": {
    "build": {
      "patterns": [
        "styles/**",
        "pages/**",
        "public/**",
        "next.config.js",
        "extension/manifest.json"
      ],
      "ignore": [
        "out",
        "node_modules",
        ".next",
        ".vscode"
      ],
      "extensions": [
        "js",
        "jsx",
        "tsx",
        "json"
      ]
    }
  }
}
